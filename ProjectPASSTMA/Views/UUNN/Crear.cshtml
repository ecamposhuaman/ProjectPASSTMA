@model ENTIDAD.UUNN

@{
    ViewBag.Title = "SE/GERENCIA";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SE/GERENCIA</h2>

<form action="@Url.Action("Crear", "UUNN")" method="post" id="frmUUNN">
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Crear Nueva SE/GERENCIA</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="NombreUUNN" class="control-label col-md-2">Nombre</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="NombreUUNN" name="NombreUUNN" placeholder="Ingrese Nombre de UUNN" />
            </div>
        </div>

        <div class="form-group">
            <label for="IdSEDE" class="control-label col-md-2">UN/SEM</label>
            <div class="col-md-10">
                <select class="form-control" id="IdSEDE" name="IdSEDE">
                    <option value="">Seleccionar...</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn btn-default" href="@Url.Action("Index", "UUNN")"><i class="glyphicon glyphicon-menu-left"></i>Volver</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        ObtenerSEDE();

        $("#frmUUNN").submit(function (event) {
            event.preventDefault(); //evitar la acción predeterminada para que la pagina no se sobrecargue
            ////AQUÍ LAS VALIDACIONES EN EL CLIENTE   //
            var nombre = $("#NombreUUNN").val();
            if ($.trim(nombre) == "") {
                alert("Ingrese Nombre de SE/GERENCIA");
                return;
            }

            var sede = $("#IdSEDE").val();
            if (sede == "") {
                alert("Elegir UN/SEM");
                return;
            }
            
            var post_url = $(this).attr("action"); //action url del formulario
            var request_method = $(this).attr("method"); //método GET/POST del formulario
            var form_data = $(this).serializeArray(); //Codificando elementos de formulario para su envío
            console.log(form_data);
            LoadingOverlayShow("#frmUUNN"); /* MOSTRAR estado de carga   */
            $.ajax({
                url: post_url,
                type: request_method,
                data: form_data
            }).done(function (response) { //
                console.log(response);
                LoadingOverlayHide("#frmUUNN"); /*   OCULTAR estado de carga   */
                if (response.ok) {
                    alert("SE/GERENCIA creada correctamente.");
                    window.location = response.toRedirect;
                }
                else {
                    alert(response.msg);
                }
            }).fail(function (jqXHR, textStatus, errorThrown) {
                LoadingOverlayHide("#frmUUNN");
            });
        });
                            
    </script>
}
