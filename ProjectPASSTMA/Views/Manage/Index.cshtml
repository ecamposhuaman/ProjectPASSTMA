@model ProjectPASSTMA.Models.IndexViewModel
@{
    ViewBag.Title = "Gestionar Cuenta";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Cambiar la configuración de la cuenta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Contraseña:</dt>
        <dd>
            
            @if (Model.HasPassword)
            {
            <a class="btn btn-danger" href="@Url.Action("ChangePassword", "Manage")"><i class="glyphicon glyphicon-pencil"></i> Cambiar contraseña</a>
                @*@Html.ActionLink("Cambiar la contraseña", "ChangePassword")*@
            }
            else
            {
                @Html.ActionLink("Crear", "SetPassword")
            }
            
        </dd>
        
    </dl>
</div>
