@model IEnumerable<ENTIDAD.RESPONSABLE>

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Usuarios</h2>
<p>
    <a class="btn btn-success" href="@Url.Action("Crear", "Responsable")"><i class="glyphicon glyphicon-plus"></i>Crear Nuevo</a>
</p>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            NOMBRE
        </th>
        <th>
            E-MAIL
        </th>
        <th>
            ROL
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.IdResponsable
        </td>
        <td>
            @item.NombreResponsable
        </td>
        <td>
            @item.EmailResponsable
        </td>
        <td>
            @item.NombreRol
        </td>
        <td>
            <a class="btn btn-primary btn-xs" href="@Url.Action("Editar", "Responsable", new { id = item.IdResponsable })" title="Editar"><i class="glyphicon glyphicon-pencil"></i></a>
            <a class="btn btn-info btn-xs" href="@Url.Action("Detalle", "Responsable", new { id = item.IdResponsable })" title="Detalles"><i class="glyphicon glyphicon-th-list"></i></a>
            <a class="btn btn-danger btn-xs" href="@Url.Action("Eliminar", "Responsable", new { id = item.IdResponsable })" title="Eliminar"><i class="glyphicon glyphicon-trash"></i></a>
        </td>
    </tr>
}

</table>
